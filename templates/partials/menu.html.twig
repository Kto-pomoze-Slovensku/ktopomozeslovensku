<script>
  var navTrigger = document.querySelector('.js-nav-trigger')
  var nav = document.querySelector('.js-nav')

  navTrigger.addEventListener('click', function() {
    var isCollapsed = navTrigger.classList.contains('is-collapsed')

    if (isCollapsed) {
      navTrigger.classList.remove('is-collapsed', 'icon-burger-big')
      navTrigger.classList.add('icon-close-big')

      nav.classList.remove('is-collapsed')

      document.body.classList.add('no-scroll')
    } else {
      navTrigger.classList.add('is-collapsed', 'icon-burger-big')
      navTrigger.classList.remove('icon-close-big')

      nav.classList.add('is-collapsed')

      document.body.classList.remove('no-scroll')
    }
  })
</script>

