{% extends "layout.html.twig" %}
{% block main %}
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="box-content">
        <h1>Komu sme pomohli</h1>
        <p>
        {% for donation in donations %}
          <ul>
            <li>{{ donation.donatedAt|date("d.m.Y") }} <b>{{ donation.recipient.institutionName }}.</b>
                {{ donation.donationItem.name }}, {{ donation.count }} ks
            </li>
          </ul>
        {% endfor %}
        </p>
      </div>
    </div>
  </div>
</div>
{% endblock %}
